@page
@model ShoppingList.Pages.Logout
@using LaYumba.Functional
@using ShoppingList.Auth
@using static LaYumba.Functional.F

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Logout page</title>
</head>
<body>
<div>
    @{
        @if (Model.IsSignedIn)
        {
            foreach (var u in IdBasedAuthenticationHandler.User.ToOptionUser(HttpContext).Bind(i => new List<IdBasedAuthenticationHandler.User> {i}))
            {
                <p>@($"Signed in, as {u.Username}")</p>

                <form method="post">
                    <input type="submit" value="Logout" id="logoutButton">
                </form>
            }
        }
        else
        {
            <p>You are signed out</p>
        }
    }
</div>
</body>
</html>