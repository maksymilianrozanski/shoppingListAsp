@page
@model ShoppingList.Pages.SignInSignOut
@using LaYumba.Functional
@using ShoppingList.Auth

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title></title>
</head>
<body>
<div>
    @if (Model.IsSignedIn)
    {
        foreach (var u in IdBasedAuthenticationHandler.User.ToOptionUser(HttpContext).Bind(i => new List<IdBasedAuthenticationHandler.User> {i}))
        {
            <p>@($"Signed in, as {u.Username}")</p>
            <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a>
        }
    }
    else
    {
        <a class="nav-link text-dark" asp-area="" asp-page="/LoginPage">Sign in</a>
    }
</div>
</body>
</html>