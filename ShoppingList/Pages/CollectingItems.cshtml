    Layout = Layout;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title></title>
</head>
<body>
<div>

    <label for="username">Username</label>
    <input type="text" id="username">

    <form method="post">
        <div>
            <label for="shoppingListId">Shopping list id</label>
            <input type="number" id="shoppingListId">
